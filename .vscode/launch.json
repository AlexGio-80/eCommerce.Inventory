{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/eCommerce.Inventory.Api/bin/Debug/net10.0/eCommerce.Inventory.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/eCommerce.Inventory.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5155"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Angular: Chrome",
            "url": "http://127.0.0.1:4200",
            "webRoot": "${workspaceFolder}/ecommerce-inventory-ui"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (BE + FE)",
            "configurations": [
                ".NET Core Launch (web)",
                "Angular: Chrome"
            ]
        }
    ]
}